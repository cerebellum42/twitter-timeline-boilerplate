<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<title>GIM Twitter Feed Example</title>
	<script src="http://code.jquery.com/jquery-1.7.2.js"></script>	
	<script src="jquery.twitter-timeline.js"></script>
	<script>
		$(document).ready(function($) {
			$("#tweets").twitterTimeline({mode:"timeline", user: "@LJR"});

			function doSearch() {
				var term = $("#search").val();
				$("#tweets").twitterTimeline({mode:"search", query: term});
			}
			
			function getUser() {
				var username = $("#user").val();
				$("#tweets").twitterTimeline({mode:"timeline", user: username});
			}

			$("#search-form").on("submit", function(e) {
				e.preventDefault();
				doSearch();
			});
			
			$("#user-form").on("submit", function(e) {
				e.preventDefault();
				getUser();
			});

			$("#search").on("keypress", function(e) {
				if (e.charCode == 13) { // if enter is the key
					e.preventDefault();
					doSearch();
				}
			});
			
			$("#user").on("keypress", function(e) {
				if (e.charCode == 13) { // if enter is the key
					e.preventDefault();
					getUser();
				}
			});
		});
	</script>
	<link rel="stylesheet" href="style_reset.css" />
	<link rel="stylesheet" href="style.css"/>
</head>
<body>
	<div id="inputs">
	
		<form name="search-form" id="search-form" action="">
			<input type="text" value="Search" name="search" id="search">
		</form>
		
		<form name="user-form" id="user-form" action="">
  			<input type="text" name="username" id="user" value="@Username"> 			
		</form>
		
	</div>
	
	<ul id="tweets"></ul>
	<footer><p>Copyright by awesome people. And blabla, you know what I mean.</p></footer>
</body>

</html>

